<h1>Editing Book</h1>
<!--エラー-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<!--入力フォーム-->
<%= form_with model: @book , method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
<% end %>
  <p>
    <%= link_to "Show", book_path(@book.id) %>
    <a href="/books">Back</a>
  </p>

